<body class="bg-gray-100 font-sans leading-normal tracking-normal">

<!--Container-->
<div class="container w-full md:max-w-3xl mx-auto pt-20">

  <div class="w-full px-4 md:px-6 text-xl text-gray-800 leading-normal" style="font-family:Georgia,serif;">

    <!--Title-->
    <div class="font-sans">
      <% if current_user&.admin? %>
        <%= link_to 'Edit', edit_article_path(@article) %>
      <% end %>
      <% if @article.title_image.present? %>
        <%= image_tag @article.title_image.url %>
      <% end %>
      <h1 class="font-bold font-sans break-normal text-gray-900 pt-6 pb-2 text-3xl md:text-4xl"><%= @article.title_ja %></h1>
      <p class="text-sm md:text-base font-normal text-gray-600">
        <time datetime="<%= @article.created_at %>">
          <%= I18n.l(@article.created_at.localtime, format: :long) %>
        </time>
      </p>
      <p class="text-sm md:text-base font-normal text-gray-600">
        <% if @article.place&.country == "japan" %>
          <%= "日本 #{@article.place.prefecture_japan.name}" %>
        <% elsif @article.place&.country == "taiwan" %>
          <%= "台灣 #{@article.place.prefecture_taiwan.name}" %>
        <% end %>
      </p>
    </div>

    <div class="markdown">
      <%= markdown(@article.content_ja) %>
    </div>

  </div>

  <br>

  <!--Divider-->
  <hr class="border-b-2 border-gray-400 mb-8 mx-4">

  <!--Author-->
  <div class="flex w-full items-center font-sans px-4 py-4">
    <% if @user&.avatar.present? %>
      <%= image_tag @user.avatar.url, class: "w-20 h-20 rounded-full mr-4" %>
    <% end %>
    <div class="flex-1 px-2">
      <p class="text-base font-bold text-base md:text-xl leading-none mb-2">Kazuki Ohta</p>
      <p class="text-gray-600 text-xs md:text-base">Japanese man
        <a class="text-nittai_teal no-underline hover:underline" href="https://www.facebook.com/atamakonkurii">facebook.com/atamakonkurii</a>
      </p>
    </div>
    <div class="justify-end">
      <%= link_to user_path(@user) do %>
        <button class="bg-transparent border border-gray-500 hover:border-green-500 text-xs text-gray-500 hover:text-green-500 font-bold py-2 px-4 rounded-full">Watch
          More
        </button>
      <% end %>
    </div>
  </div>
  <!--/Author-->

  <!--Divider-->
  <hr class="border-b-2 border-gray-400 mb-8 mx-4">

